APP_NAME="WPS Payroll Compliance"
APP_ENV=testing
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=info

# Neon Postgres connection for the central application
DB_CONNECTION=pgsql
DB_URL="postgresql://username:password@neon-host:5432/central_db?sslmode=require"
DB_HOST=
DB_PORT=
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Tenant databases also live on Neon
TENANT_DB_CONNECTION=pgsql
TENANT_DB_URL="postgresql://username:password@neon-host:5432/tenant_template?sslmode=require"
TENANT_DB_TEMPLATE_CONNECTION=pgsql
TENANT_DB_PREFIX=tenant_
TENANT_DB_SUFFIX=

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Audit trail retention policy (tests default to trim aggressively)
AUDIT_TRAIL_MAX_EVENTS=200
AUDIT_TRAIL_MAX_AGE_DAYS=180
AUDIT_TRAIL_POLICY_VERSION=2024-10-01
AUDIT_TRAIL_PRUNE_CHUNK=200

# Horizon queue tuning defaults for test harness
HORIZON_QUEUE_CONNECTION=redis
HORIZON_PREFIX=horizon-testing
HORIZON_IMPORTS_MAX_PROCESSES=2
HORIZON_VALIDATION_MAX_PROCESSES=2

# Upstash Redis configuration
REDIS_CLIENT=phpredis
REDIS_URL="rediss://username:password@upstash-host:6379"
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_MAX_RETRIES=5
REDIS_BACKOFF_ALGORITHM=decorrelated_jitter
REDIS_BACKOFF_BASE=250
REDIS_BACKOFF_CAP=2000

UPSTASH_REDIS_REST_URL="https://upstash-host.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-rest-token"

MAIL_MAILER=log
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

OPS_ADMIN_EMAIL="ops@example.com"
OPS_ADMIN_NAME="Operations Admin"

KEYCLOAK_BASE_URL="https://keycloak.example.com"
KEYCLOAK_REALM="wps"
KEYCLOAK_CLIENT_ID="filament"
KEYCLOAK_CLIENT_SECRET="super-secret-key"
KEYCLOAK_REDIRECT_URI="https://app.example.com/admin/callback"
KEYCLOAK_REDIRECT_URL="/admin"
KEYCLOAK_CACHE_OPENID=true
KEYCLOAK_REALM_PUBLIC_KEY=""

CENTRAL_DOMAIN=localhost
DEFAULT_TENANT_ID=
DEFAULT_TENANT_NAME="Default Tenant"
DEFAULT_TENANT_DOMAIN=
DEFAULT_TENANT_EMAIL=
DEFAULT_TENANT_SEED=true

VITE_APP_NAME="${APP_NAME}"
