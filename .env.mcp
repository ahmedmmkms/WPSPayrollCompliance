# 1) Create a clean MCP env that never hits DB/files
BOOST_ENABLED=true
APP_ENV=local
APP_DEBUG=true

# Send logs to stderr so no writes to storage/logs
LOG_CHANNEL=stderr
LOG_LEVEL=warning

# Keep everything in memory for MCP
CACHE_STORE=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync

# Make DB a no-op (in-memory sqlite)
DB_CONNECTION=sqlite
DB_DATABASE=:memory:
